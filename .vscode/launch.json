{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/SS/Projekat/emulator",
            "args": [
                // "-hex",
                // "-place=ivt@0x0000",
                // "-o",
                "instructions.hex",
                // "instructions.o",
                // "find-max.o"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/SS/Projekat",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
